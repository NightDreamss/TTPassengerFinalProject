<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/passenger_account_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/passenger_account_button"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_seat"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:enabled="false"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:text="@string/passenger"
                android:textColor="@color/whitePurple"
                android:textSize="18sp" />

            <Button
                android:id="@+id/passenger_account_driver_button"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/passenger_account_button"
                android:backgroundTint="@color/colorAccent"
                android:drawableStart="@drawable/ic_driver"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:text="@string/driver"
                android:textColor="@color/whitePurple"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/verify_code_activity_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:elevation="10dp"
            android:outlineProvider="none">

            <ImageView
                android:id="@+id/verify_code_activity_header_image"
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/sub_logo"
                android:elevation="1dp"
                android:outlineProvider="none"
                android:src="@drawable/ic_sublogo"
                android:transitionName="@string/register_account_logo_transition" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/registerFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>