<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeScreen">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_welcomescreen"
        app:layout_constraintTop_toBottomOf="@+id/welcome_screen_logo" />

    <TextView
        android:id="@+id/welcome_screeen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_marginTop="50dp"
        android:text="@string/welcome_to"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="85dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/welcome_screen_logo"
        android:layout_width="match_parent"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_ttpassengerlogo_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/welcome_screen_phone_number_verification_button"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="50dp"
        android:text="@string/accept_continue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/welcome_screen_bottom_layer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/welcome_screen_bottom_layer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:contentDescription="@string/container"
        android:src="@drawable/transition_layer_welcome_screen"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/welcome_screen_transition_image"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:contentDescription="@string/sub_logo"
        android:elevation="1dp"
        android:outlineProvider="none"
        android:src="@drawable/ic_sublogo"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="3.5dp"
        android:transitionName="@string/register_account_logo_transition"
        app:layout_constraintBottom_toBottomOf="@+id/welcome_screen_logo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcome_terms_of_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Accept_terms"
        android:textColor="@color/whitePurple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/welcome_terms_of_service_link_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcome_terms_of_service_link_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_terms_of_service"
        android:layout_marginBottom="10dp"
        android:text="@string/terms_of_service_and_privacy_policy"
        android:textColor="@color/whitePurple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>