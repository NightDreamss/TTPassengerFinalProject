<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/whitePurple"
    app:cardCornerRadius="10.0dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="10.0dp">

    <LinearLayout
        android:id="@+id/contact_request_item_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_request_item_ProfileImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_image"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="0.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_request_item_Contact_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:maxLines="1"
                android:text="@string/real_name"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/contact_request_item_Contact_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/mobile_phone_number"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/contact_request_item_acceptbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/contact_request_item_declinebtn"
                    android:background="@color/colorAccent"
                    android:text="@string/accept"
                    android:textColor="@color/whitePurple"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/contact_request_item_declinebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/colorAccent"
                    android:text="@string/decline"
                    android:textColor="@color/whitePurple"
                    android:textSize="12sp" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>